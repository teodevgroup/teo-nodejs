{
  "include": ["tests/**/*.ts"],
  "compilerOptions": {
    "lib": ["es2015"],
    "target": "es2016",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./tests",
    "outDir": "./tests_build",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "types": ["node"],
  }
}